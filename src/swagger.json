{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Node Express Backend ",
    "description": "Node.js NET.ts RESTful API"
  },
  "basePath": "/",
  "schemes": ["http", "https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api/health": {
      "get": {
        "tags": ["healthcheck"],
        "summary": "Application service health check ðŸ’—",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/user": {
      "get": {
        "tags": ["get user"],
        "description": "Get user",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "default": "JWT Token",
            "schema": {
              "type": "string"
            }
          }
        ]
      },
      "post": {
        "tags": ["create user"],
        "description": "Create user",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User has been created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/ResponseWithMessage"
                }
              }
            }
          },
          "401": {
            "description": "Access forbidden. Incorrect x-api-key!",
            "error": {}
          },
          "500": {
            "description": "Internal Server Error",
            "message": {}
          }
        },
        "security": [
          {
            "api_key": "$X_API_KEY"
          }
        ]
      }
    }
  },
  "definitions": {
    "UserInput": {
      "required": [
        "name",
        "email",
        "password",
        "confirmPassword",
        "country",
        "phone",
        "username"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "confirmPassword": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      }
    },
    "ResponseWithMessage": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        },
        "accessToken": {
          "type": "string"
        },
        "refreshToken": {
          "type": "string"
        }
      }
    }
  }
}
